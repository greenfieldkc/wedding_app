<body class="background2">
<h1 class="home">Guest Book</h1>

<h2>Post a Comment</h2>
<div class='guest-book'>
<%= form_for(@comment) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<p><span><%= f.label :email %></span>
	<%= f.text_field :email %></p>
	
	<p><span><%= f.label :message %></span>
	<%= f.text_area :message, :size => '20x10' %></p>
	
	<div class="comment-button"><%= f.submit "Submit Message" %></div>
</div>	
<% end %>


